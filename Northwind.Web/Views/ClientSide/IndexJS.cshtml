
<h3>Javascript</h3>
<h4 id="today"></h4>

<input id="firstName" placeholder="First Name"/>
<button id="btnFirstName" class="btn-primary">Click FirstName</button>

<input id="lastName" placeholder="Last Name" />
<button class="btn-secondary">Click LastName</button>

<table>
    <thead>
        <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Qty</th>
            <th>SubTotalPrice</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                <input id="product" value="Bike"/>
            </td>
            <td>
                <input id="price" value="15"/>
            </td>
            <td>
                <input id="qty" value="1"/>
            </td>
            <td>
                <input id="subTotalPrice" value="15"/>
            </td>
            <td>
                <button id="btnAdd">Add Item</button>
            </td>
        </tr>
    </tbody>
</table>

@section scripts{
    <script type="text/javascript">
        let today = new Date();
        
        // search element by id
        var elH2 = document.getElementById("today");
        elH2.textContent=today;

        var elFirstName= document.getElementById("firstName")
        elFirstName.value = "Iswara Den" 

        document.getElementById("btnFirstName").addEventListener('click',()=>{
            elFirstName.value="Bootcamp CodeId";
        });
        
        var elLastName= document.getElementById("lastName")
        elLastName.value = "Dy Arta" 

        // anonymous function
        document.querySelector('.btn-secondary').onclick = function(e){
            elLastName.value = "sentul";
        }

        document.getElementById('btnAdd').addEventListener('click', () => {
            //Alert ('test')
            let price = parseFloat(document.getElementById('price').value);
            let qty = document.getElementById('qty')
            let subTotalPrice = document.getElementById('subTotalPrice');
            let counter = parseInt(qty.value);
            counter++;
            qty.value = counter ;
            subTotalPrice.value = price * qty.value;
        });

    </script>
}